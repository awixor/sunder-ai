{
  "name": "@sunder/extension",
  "displayName": "Sunder AI",
  "version": "0.0.1",
  "description": "Privacy-first, local-first AI toolset. Redact sensitive data before sending it to AI models.",
  "author": "awixor",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "build:edge": "plasmo build --target=edge-mv3 && node scripts/fix-edge-manifest.mjs"
  },
  "dependencies": {
    "@sunder/core": "workspace:*",
    "@fontsource/space-mono": "^5.2.9",
    "@plasmohq/storage": "^1.15.0",
    "clsx": "^2.1.1",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage"
    ]
  }
}
